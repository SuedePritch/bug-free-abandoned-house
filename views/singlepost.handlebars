<div class='card-container'>
    <div class="card">
        <div class="title">{{singlePost.title}}
        <p>{{singlePost.user.username}}</p>
        <p class="date">{{format_date singlePost.updatedAt}}</p>
        </div>
        <p class="content" >{{singlePost.content}}</p>
        {{#singlePost.comments}}
        <p>{{comment}}{{user.username}}</p>
        {{/singlePost.comments}}
    </div>
</div>